# Exemple de configuration - À COPIER vers .env et MODIFIER avec vos vraies valeurs

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
# app.baseURL = 'https://votre-domaine-production.com/'  # En production

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = si_gprh
database.default.username = postgres
database.default.password = CHANGER_MOI_AVEC_VOTRE_MOT_DE_PASSE_DB
database.default.DBDriver = Postgre
database.default.DBPrefix =
database.default.port = 5432

#--------------------------------------------------------------------
# JWT AUTHENTICATION
#--------------------------------------------------------------------

# Générer une clé secrète unique (au moins 32 caractères aléatoires)
# Exemple: openssl rand -base64 32
JWT_SECRET = GENERER_UNE_CLE_SECRETE_UNIQUE_ICI
JWT_TIME_TO_LIVE = 3600

#--------------------------------------------------------------------
# EMAIL SMTP CONFIGURATION
#--------------------------------------------------------------------

# Pour obtenir SMTP_PASS:
# 1. Aller sur https://myaccount.google.com/apppasswords
# 2. Créer un mot de passe application pour "SI-GPRH"
# 3. Copier le code 16 caractères (sans espaces)
SMTP_PASS = OBTENIR_MOT_DE_PASSE_APP_GMAIL

#--------------------------------------------------------------------
# CORS Configuration
#--------------------------------------------------------------------

# Adresse du frontend Angular (séparée par virgules si plusieurs)
# En dev:
CORS_ALLOWED_ORIGINS = http://localhost:4200
# En prod:
# CORS_ALLOWED_ORIGINS = https://app.votre-domaine.com

#--------------------------------------------------------------------
# FILE UPLOADS
#--------------------------------------------------------------------

# Taille max upload (en MB)
MAX_UPLOAD_SIZE = 10

#--------------------------------------------------------------------
# NOTES POUR LE DÉPLOIEMENT
#--------------------------------------------------------------------

# DÉVELOPPEMENT LOCAL:
# - Copier ce fichier: cp .env.example .env
# - Modifier avec vos valeurs locales
# - Ne JAMAIS commiter le fichier .env

# PRODUCTION:
# - Créer .env sur le serveur
# - Utiliser des valeurs DIFFÉRENTES (DB prod, SMTP prod, etc.)
# - Sécuriser: chmod 600 .env
# - Ne JAMAIS versionner le .env de production
